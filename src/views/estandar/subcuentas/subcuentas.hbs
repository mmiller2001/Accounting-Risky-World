<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/estandar">Catalogos de Cuentas - Nivel Superior</a></li>
    <li class="breadcrumb-item active" aria-current="page">Catalogos de Cuentas - Nivel Medio</li>
  </ol>
</nav>
<h1 class="display-6">Catalogos de Cuenta - Nivel Medio</h1>

<table class="table table-bordered">
  <thead class = "thead-dark text-center">
    <tr>
      <th scope="col">Catbase ID</th>
      <th scope="col">Codigo</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody class="text-center">
    {{#each subcatalogo}}
    <tr>
      <th scope="row">{{this.catbaseid}}</th>
      <td>{{this.catbasecodigo}}</td>
      <td>{{this.catbasedescripcion}}</td>
     <td class = "text-center">
         <a href = "/estandar/subcuentas/{{this.cc1id}}/ver/{{this.cc2id}}" type = "button" class = "btn btn-outline-info btn-small"><i class = "bi bi-eye"></i>Ver</a>
         <a href = "/estandar/subcuentas/{{this.cc1id}}/modificar/{{this.cc2id}}" type = "button" class = "btn btn-outline-primary btn-small"><i class = "bi bi-pencil"></i>Modificar</a>
         <a href = "/estandar/subcuentas/{{this.cc1id}}/subcuentas/{{this.cc2id}}" type = "button" class = "btn btn-outline-secondary btn-small"><i class = "bi bi-pencil"></i>Agregar Subcuentas</a>
         <a href = "/estandar/subcuentas/{{this.cc1id}}/eliminar/{{this.cc2id}}" type = "button" class = "btn btn-outline-danger btn-small"><i class = "bi bi-person-x"></i>Eliminar</a>
     </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>

<div class = "row">
  <div class = "col-6 d-flex justify-content-end">
    <a href = "/estandar/subcuentas/{{this.catbaseid}}/mas" type = "button" class = "btn btn-primary align-self-center">Agregar Cuenta a Nivel 2</a>
  </div>
</div>
