<h1 class="display-6">Catalogos de Cuenta - Estandar</h1>

<table class="table table-bordered">
  <thead class = "thead-dark text-center">
    <tr>
      <th scope="col">Catbase ID</th>
      <th scope="col">Codigo</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody class="text-center">
    {{#each subcatalogo}}
    <tr>
      <th scope="row">{{this.catbaseid}}</th>
      <td>{{this.catbasecodigo}}</td>
      <td>{{this.catbasedescripcion}}</td>
     <td class = "text-center">
         <a href = "/estandar/ver/{{this.catbaseid}}" type = "buton" class = "btn btn-outline-info btn-small"><i class = "bi bi-eye"></i>Ver</a>
         <a href = "/estandar/modificar/{{this.catbaseid}}" type = "buton" class = "btn btn-outline-primary btn-small"><i class = "bi bi-pencil"></i>Modificar</a>
         <a href = "/estandar/subcuentas/{{this.catbaseid}}" type = "buton" class = "btn btn-outline-secondary btn-small"><i class = "bi bi-pencil"></i>Agregar Subcuentas</a>
         <a href = "/estandar/eliminar/{{this.catbaseid}}" type = "buton" class = "btn btn-outline-danger btn-small"><i class = "bi bi-person-x"></i>Eliminar</a>
     </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>

<div class = "row">
  <div class = "col-6 d-flex justify-content-end">
    <a href = "/estandar/subcuentas/{{this.catbaseid}}/mas" type = "button" class = "btn btn-primary align-self-center">Agregar Cuenta a Nivel 2</a>
  </div>
</div>
